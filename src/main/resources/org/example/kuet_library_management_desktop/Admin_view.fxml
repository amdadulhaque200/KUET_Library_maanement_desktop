<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>

<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="org.example.kuet_library_management_desktop.AdminController"
            prefHeight="500.0" prefWidth="700.0">

    <top>
        <HBox spacing="10" alignment="CENTER_LEFT" style="-fx-background-color: #2c3e50; -fx-padding: 10;">
            <Label text="Welcome, Admin!" style="-fx-text-fill: white; -fx-font-size: 16px;" />
            <Region HBox.hgrow="ALWAYS" />
            <Button text="Change Password" fx:id="changePasswordBtn" onAction="#handleChangePassword" style="-fx-text-fill: white; -fx-background-color: #f39c12;" />
        </HBox>
    </top>

    <left>
        <VBox spacing="10" style="-fx-background-color: #34495e; -fx-padding: 10;">
            <Button text="Manage Books" fx:id="manageBooksBtn" style="-fx-text-fill: white; -fx-background-color: #3498db;" />
            <Button text="Manage Students" fx:id="manageStudentsBtn" style="-fx-text-fill: white; -fx-background-color: #3498db;" />
            <Button text="Issue/Return Books" fx:id="issueReturnBtn" style="-fx-text-fill: white; -fx-background-color: #3498db;" />
            <Button text="Logout" fx:id="logoutBtn" style="-fx-text-fill: white; -fx-background-color: #e74c3c;" />
        </VBox>
    </left>

    <center>
        <StackPane fx:id="contentPane" style="-fx-background-color: #ecf0f1;" />
    </center>
</BorderPane>

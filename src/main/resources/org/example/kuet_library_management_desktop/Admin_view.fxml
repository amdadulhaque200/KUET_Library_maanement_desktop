<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane prefHeight="500.0" prefWidth="700.0" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.kuet_library_management_desktop.AdminController">

    <top>
        <HBox alignment="CENTER_LEFT" spacing="10" style="-fx-background-color: #2c3e50; -fx-padding: 10;">
            <Label style="-fx-text-fill: white; -fx-font-size: 16px;" text="Welcome, Admin!" />
            <Region HBox.hgrow="ALWAYS" />
        </HBox>
    </top>

    <left>
        <VBox spacing="10" style="-fx-background-color: #34495e; -fx-padding: 10;">
            <Button fx:id="manageBooksBtn" style="-fx-text-fill: white; -fx-background-color: #3498db;" text="Add Books" />
            <Button fx:id="manageStudentsBtn" style="-fx-text-fill: white; -fx-background-color: #3498db;" text="Students" />
            <Button fx:id="issueReturnBtn" style="-fx-text-fill: white; -fx-background-color: #3498db;" text="Issue/Return Books" />
            <Button fx:id="logoutBtn" style="-fx-text-fill: white; -fx-background-color: #e74c3c;" text="Logout" />
        </VBox>
    </left>

    <center>
        <StackPane fx:id="contentPane" style="-fx-background-color: #ecf0f1;" />
    </center>
</BorderPane>

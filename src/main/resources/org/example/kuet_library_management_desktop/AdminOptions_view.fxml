<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane xmlns="http://javafx.com/javafx/21.0.6" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.kuet_library_management_desktop.AdminOptionsController">

    <top>
        <Button text="â† Back" onAction="#onBack" style="-fx-background-color: transparent; -fx-text-fill: #3498db; -fx-cursor: hand; -fx-font-size: 16px; -fx-padding: 10;">
            <BorderPane.margin>
                <Insets top="10" left="10" />
            </BorderPane.margin>
        </Button>
    </top>

    <center>
        <VBox alignment="CENTER" spacing="30" style="-fx-padding: 40;">
            <padding>
                <Insets bottom="40" left="40" right="40" top="20" />
            </padding>

            <Label text="Admin Portal" style="-fx-font-size: 28px; -fx-font-weight: bold; -fx-text-fill: #2c3e50;">
                <font>
                    <Font name="System Bold" size="28.0" />
                </font>
            </Label>

            <Button fx:id="loginBtn" defaultButton="true" onAction="#onLogin" prefWidth="250.0" text="Login" style="-fx-background-color: #4CAF50; -fx-text-fill: white; -fx-font-size: 20px; -fx-font-weight: bold; -fx-padding: 15; -fx-cursor: hand; -fx-background-radius: 8px;">
                <font>
                    <Font name="System Bold" size="20.0" />
                </font>
            </Button>

            <Button fx:id="registerBtn" onAction="#onRegister" prefWidth="250.0" text="Register" style="-fx-background-color: #3498db; -fx-text-fill: white; -fx-font-size: 20px; -fx-font-weight: bold; -fx-padding: 15; -fx-cursor: hand; -fx-background-radius: 8px;">
                <font>
                    <Font name="System Bold" size="20.0" />
                </font>
            </Button>
        </VBox>
    </center>

</BorderPane>


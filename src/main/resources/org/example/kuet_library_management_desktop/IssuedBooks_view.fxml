<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<VBox spacing="15" style="-fx-padding: 20; -fx-background-color: white;" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1">

    <!-- Title -->
    <Label text="My Issued Books" style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-text-fill: #2c3e50;">
        <font>
            <Font name="System Bold" size="24.0" />
        </font>
    </Label>

    <!-- Results Count -->
    <Label fx:id="issuedCount" text="You have no issued books" style="-fx-text-fill: #7f8c8d; -fx-font-size: 13px;" />

    <!-- Scrollable Results Area -->
    <ScrollPane fitToWidth="true" style="-fx-background-color: transparent; -fx-border-color: transparent;" VBox.vgrow="ALWAYS">
        <content>
            <VBox fx:id="issuedBooksBox" spacing="8" style="-fx-padding: 5;">
                <!-- Issued book items will be dynamically added here -->
            </VBox>
        </content>
    </ScrollPane>

</VBox>


<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane xmlns="http://javafx.com/javafx/21.0.6" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.kuet_library_management_desktop.ManageBooksOptionsController">

    <!-- Back button -->
    <top>
        <Button text="â† Back" onAction="#onBack" style="-fx-background-color: transparent; -fx-text-fill: #3498db; -fx-cursor: hand; -fx-font-size: 16px; -fx-padding: 10;">
            <BorderPane.margin>
                <Insets top="10" left="10" />
            </BorderPane.margin>
        </Button>
    </top>

    <!-- Options centered -->
    <center>
        <VBox alignment="CENTER" spacing="30" style="-fx-background-color: #34495e; -fx-padding: 40;">
            <padding>
                <Insets bottom="60" left="60" right="60" top="60" />
            </padding>

            <Label text="Manage Books" style="-fx-font-size: 32px; -fx-font-weight: bold; -fx-text-fill: white;">
                <font>
                    <Font name="System Bold" size="32.0" />
                </font>
            </Label>

            <Button fx:id="addBooksBtn" defaultButton="true" onAction="#onAddBooks" prefWidth="350.0" text="Add Books" style="-fx-background-color: #3498db; -fx-text-fill: white; -fx-font-size: 20px; -fx-font-weight: bold; -fx-padding: 20; -fx-cursor: hand; -fx-background-radius: 8px;">
                <font>
                    <Font name="System Bold" size="20.0" />
                </font>
            </Button>

            <Button fx:id="viewBooksBtn" onAction="#onViewBooks" prefWidth="350.0" text="Books" style="-fx-background-color: #3498db; -fx-text-fill: white; -fx-font-size: 20px; -fx-font-weight: bold; -fx-padding: 20; -fx-cursor: hand; -fx-background-radius: 8px;">
                <font>
                    <Font name="System Bold" size="20.0" />
                </font>
            </Button>
        </VBox>
    </center>

</BorderPane>


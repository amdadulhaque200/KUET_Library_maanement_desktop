<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<VBox alignment="CENTER" spacing="40" styleClass="homepage-container" style="-fx-background-color: linear-gradient(to bottom right, #2c3e50, #34495e);" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.kuet_library_management_desktop.LibraryController">

    <padding>
        <Insets bottom="60" left="60" right="60" top="60" />
    </padding>

    <Label text="KUET Library Management" styleClass="homepage-title" style="-fx-text-fill: white; -fx-font-size: 36px; -fx-font-weight: bold;">
        <font>
            <Font name="System Bold" size="36.0" />
        </font>
    </Label>

    <Label text="Welcome to the Digital Library System" styleClass="homepage-subtitle" style="-fx-text-fill: #ecf0f1; -fx-font-size: 18px;">
        <font>
            <Font size="18.0" />
        </font>
    </Label>

    <HBox alignment="CENTER" spacing="30">
        <Button onAction="#openAdminView" text="Admin" styleClass="homepage-button" style="-fx-background-color: #1abc9c; -fx-text-fill: white; -fx-font-size: 18px; -fx-font-weight: bold; -fx-padding: 20 40; -fx-pref-width: 250px; -fx-cursor: hand; -fx-background-radius: 8px;">
            <font>
                <Font name="System Bold" size="18.0" />
            </font>
        </Button>
        <Button onAction="#openStudentView" text="Student" styleClass="homepage-button" style="-fx-background-color: #1abc9c; -fx-text-fill: white; -fx-font-size: 18px; -fx-font-weight: bold; -fx-padding: 20 40; -fx-pref-width: 250px; -fx-cursor: hand; -fx-background-radius: 8px;">
            <font>
                <Font name="System Bold" size="18.0" />
            </font>
        </Button>
    </HBox>
</VBox>


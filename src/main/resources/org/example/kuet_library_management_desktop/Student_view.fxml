<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>

<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="org.example.kuet_library_management_desktop.StudentController">

    <top>
        <HBox spacing="10" alignment="CENTER_LEFT" styleClass="top-bar" style="-fx-background-color: #2c3e50; -fx-padding: 10;">
            <Button text="â†" onAction="#onBack" styleClass="button-back" style="-fx-background-color: transparent; -fx-text-fill: white; -fx-font-size: 16px; -fx-cursor: hand;" />
            <Label fx:id="welcomeLabel" text="Welcome, Student!" styleClass="top-bar" style="-fx-text-fill: white; -fx-font-size: 16px; -fx-font-weight: bold;" />
        </HBox>
    </top>

    <left>
        <VBox spacing="10" styleClass="sidebar" style="-fx-background-color: #34495e; -fx-padding: 10;">
            <Button text="Profile" fx:id="profileBtn" styleClass="sidebar-button" style="-fx-text-fill: white; -fx-background-color: #1abc9c; -fx-pref-width: 150px; -fx-padding: 12; -fx-cursor: hand; -fx-background-radius: 4px;" />
            <Button text="Book Search" fx:id="bookSearchBtn" styleClass="sidebar-button" style="-fx-text-fill: white; -fx-background-color: #1abc9c; -fx-pref-width: 150px; -fx-padding: 12; -fx-cursor: hand; -fx-background-radius: 4px;" />
            <Button text="Issued Books" fx:id="issuedBooksBtn" styleClass="sidebar-button" style="-fx-text-fill: white; -fx-background-color: #1abc9c; -fx-pref-width: 150px; -fx-padding: 12; -fx-cursor: hand; -fx-background-radius: 4px;" />
            <Button text="Logout" fx:id="logoutBtn" styleClass="sidebar-button, button-danger" style="-fx-text-fill: white; -fx-background-color: #e74c3c; -fx-pref-width: 150px; -fx-padding: 12; -fx-cursor: hand; -fx-background-radius: 4px;" />
        </VBox>
    </left>

    <center>
        <StackPane fx:id="contentPane" styleClass="content-pane" style="-fx-background-color: #ecf0f1;" />
    </center>
</BorderPane>


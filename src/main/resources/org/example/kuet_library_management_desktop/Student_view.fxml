<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>

<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="org.example.kuet_library_management_desktop.StudentController"
            prefHeight="400.0" prefWidth="600.0">

    <top>
        <HBox spacing="10" alignment="CENTER_LEFT" style="-fx-background-color: #2c3e50; -fx-padding: 10;">
            <Label text="Welcome, Student!" style="-fx-text-fill: white; -fx-font-size: 16px;" />
        </HBox>
    </top>

    <left>
        <VBox spacing="10" style="-fx-background-color: #34495e; -fx-padding: 10;">
            <Button text="Profile" fx:id="profileBtn" style="-fx-text-fill: white; -fx-background-color: #1abc9c;" />
            <Button text="Book Search" fx:id="bookSearchBtn" style="-fx-text-fill: white; -fx-background-color: #1abc9c;" />
            <Button text="Issued Books" fx:id="issuedBooksBtn" style="-fx-text-fill: white; -fx-background-color: #1abc9c;" />
            <Button text="Logout" fx:id="logoutBtn" style="-fx-text-fill: white; -fx-background-color: #e74c3c;" />
        </VBox>
    </left>

    <center>
        <StackPane fx:id="contentPane" style="-fx-background-color: #ecf0f1;" />
    </center>
</BorderPane>
